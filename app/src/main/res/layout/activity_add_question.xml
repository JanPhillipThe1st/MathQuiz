<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:backgroundTint="#F8F4EC"
    android:background="#F8F4EC"
    android:orientation="vertical"
    tools:context=".AddQuestion">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#365486"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTabBarStyle"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_new_24"
        app:title="Add Question"
        app:titleTextColor="#DCF2F1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/alatsi"
        android:text="Type question below:"
        android:textColor="#365486"
        android:textSize="16sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#365486"
        android:hint="Enter question here...">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="350dp"
            android:id="@+id/tvQuestion"
            android:textColor="#365486"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/alatsi"
        android:text="Choices "
        android:textColor="#AD365486"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/alatsi"
            android:text="A: "
            android:textColor="#365486"
            android:textSize="20sp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColorHint="#365486"
            android:hint="Enter item 'A' answer">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:id="@+id/tvA"
                android:textColor="#365486"
                android:inputType="number|numberDecimal"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/alatsi"
            android:text="B: "
            android:textColor="#365486"
            android:textSize="20sp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColorHint="#365486"
            android:hint="Enter item 'B' answer">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:id="@+id/tvB"
                android:textColor="#365486"
                android:inputType="number|numberDecimal"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/alatsi"
            android:text="C: "
            android:textColor="#365486"
            android:textSize="20sp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColorHint="#365486"
            android:hint="Enter item 'C' answer">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:id="@+id/tvC"
                android:textColor="#365486"
                android:inputType="number|numberDecimal"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
    android:gravity="center"
    android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/alatsi"
        android:text="D: "
        android:textColor="#365486"
        android:textSize="20sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColorHint="#365486"
        android:hint="Enter item 'D' answer">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="300dp"
            android:id="@+id/tvD"
            android:textColor="#365486"
            android:inputType="number|numberDecimal"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/alatsi"
            android:text="Answer: "
            android:textColor="#365486"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/answerSpinner"
            style="@android:style/Widget.DeviceDefault.Light.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSaveQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alatsi"
        android:height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:textColor="#DCF2F1"
        android:textSize="16dp"
        android:backgroundTint="#365486"
        android:layout_marginBottom="10dp"
        android:text="Save question" />

    <Button
        android:id="@+id/btnSeeQuestions"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="150dp"
        android:height="50dp"
        android:backgroundTint="#F8F4EC"
        android:fontFamily="@font/alatsi"
        android:text="See questions"
        android:textColor="#365486"
        android:textSize="16dp" />
</LinearLayout>