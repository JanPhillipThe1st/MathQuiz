<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:backgroundTint="#F8F4EC"
    android:background="#F8F4EC"
    android:orientation="vertical"
    tools:context=".Register">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#365486"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTabBarStyle"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_new_24"
        app:title="Register Account"
        app:titleTextColor="#DCF2F1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/alatsi"
        android:text="Full name"
        android:textColor="#365486"
        android:textSize="16sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#365486"
        android:hint="Enter full name here...">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="350dp"
            android:id="@+id/tvFullName"
            android:textColor="#365486"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/alatsi"
        android:text="Username"
        android:textColor="#365486"
        android:textSize="16sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#365486"
        android:hint="Enter username here...">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="350dp"
            android:id="@+id/tvUsername"
            android:textColor="#365486"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/alatsi"
        android:text="Password"
        android:textColor="#365486"
        android:textSize="16sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#365486"
        android:hint="Enter password here...">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="350dp"
            android:id="@+id/tvPassword"
            android:inputType="textPassword|text"
            android:textColor="#365486"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alatsi"
        android:height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:textColor="#DCF2F1"
        android:textSize="16dp"
        android:backgroundTint="#365486"
        android:layout_marginBottom="10dp"
        android:text="Sign up" />
<!--    <Button
        android:id="@+id/btnSeeQuestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alatsi"
        android:height="50dp"
        android:layout_marginHorizontal="50dp"
        android:textColor="#365486"
        android:textSize="16dp"
        android:backgroundTint="#F8F4EC"
        android:layout_marginBottom="150dp"
        android:text="See questions" />-->
</LinearLayout>